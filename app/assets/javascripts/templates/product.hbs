{{#if controller.isEditing}}
  {{render "productEdit"}}
{{else}}
<h2><img {{bindAttr src="image_url"}} />{{title}}</h2>

<dl class="dl-horizontal">
  {{#if description}}
    <dt>Description:</dt>
    <dd>{{description}}</dd>
  {{/if}}
  {{#if price}}
    <dt>Price:</dt>
    <dd>{{price}}</dd>
  {{/if}}
</dl>

<div class="well well-small">
  <a class="btn btn" {{action startEditing}}>Edit</a>
  <a class="btn btn-danger" {{action destroyRecord}}>Remove</a>
</div>
{{/if}}
